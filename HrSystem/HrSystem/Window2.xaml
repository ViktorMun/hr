<Window x:Class="HrSystem.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HrSystem"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">
    <Grid>
        <Button x:Name="BtnSave" Content="Сохранить" HorizontalAlignment="Left" Margin="32,180,0,0" VerticalAlignment="Top" Width="75" Click="BtnSave_Click"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="32,92,0,0" TextWrapping="Wrap" Text="Фамилия" VerticalAlignment="Top" Width="120" />
        <TextBox HorizontalAlignment="Left" Height="23" Margin="32,137,0,0" TextWrapping="Wrap" Text="Имя" VerticalAlignment="Top" Width="120"/>
        <ComboBox HorizontalAlignment="Left" Margin="32,32,0,0" VerticalAlignment="Top" Width="120" x:Name="ShowDepartments"
           Height="25" SelectionChanged="ShowDepartments_SelectionChanged"/>

    </Grid>
</Window>
